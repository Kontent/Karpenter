<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.6//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension
	version="1.6"
	type="template"
	client="site">
    <name>Atomic2</name>
    <creationDate>10/10/09</creationDate>
    <author>Ron Severdia</author>
    <authorEmail>contact@kontentdesign.com</authorEmail>
    <authorUrl>http://www.kontentdesign.com</authorUrl>
    <copyright>(C) 2011 Kontent Design. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later</license>
    <version>2.0</version>
    <description>This the Atomic2 template with the Karpenter template framework installed. For more information, visit <![CDATA[<a href="http://extensions.kontentdesign.com" target="_blank">Kontent Extensions</a>]]>.   
		<![CDATA[
			<link rel="stylesheet" href="../templates/atomic2/css/administrator.css" type="text/css" /> 
		]]>    
    </description>
    <files>
        <folder>html</folder>
        <folder>css</folder>
        <folder>images</folder>
        <folder>language</folder>
        <folder>js</folder>
        <filename>index.php</filename>
        <filename>index.html</filename>
        <filename>favicon.ico</filename>
        <filename>templateDetails.xml</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
        <filename>component.php</filename>
        <filename>error.php</filename>
    </files>

    <positions>
        <position>atomic-bottomleft</position>
        <position>atomic-bottommiddle</position>
        <position>atomic-search</position>
        <position>atomic-sidebar</position>
        <position>atomic-topmenu</position>
        <position>atomic-topquote</position>
    </positions>
	
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.tpl_atomic2.ini</language>
        <language tag="en-GB">en-GB/en-GB.tpl_atomic2.sys.ini</language>
    </languages>
        
    <config>
        <fields name="params">
        	<fieldset name="css"  label="TPL_ATOMIC2_CSS_FIELDSET_LABEL">
        		<field name="blueprint" type="radio" default="0" label="Load CSS Framework" description="Load Blueprint, a simple CSS framework for quickly creating table-less layouts.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="spacer1a"  type="spacer" default=""
					label=""
					description=""
					filter="string" />
				<field name="blue-liquid" type="radio" default="0" label="Liquid Plug-in" description="A plug-in to use a flexible width instead of a fixed width layout.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="blue-buttons" type="radio" default="0" label="Buttons Plug-in" description="Enables nice CSS buttons. Turn this off if you're using CSS3 buttons.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="blue-fancy" type="radio" default="0" label="Fancy Type Plug-in" description="Add some extra fancy type like quotation marks and special capital letters.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="blue-linkicons" type="radio" default="0" label="Link Icons Plug-in" description="Displays an icon next to each link based on why type of link it is.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="blue-silksprite" type="radio" default="0" label="SilkSprite Plug-in" description="Adds the popular Silk icon package as a sprite.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="blue-tabs" type="radio" default="0" label="Tabs Plug-in" description="A simple tab system.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="blue-rtl" type="radio" default="0" label="RTL Plug-in" description="Turn this on if you want to use RTL enhancements">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
        	</fieldset>
        	 <fieldset name="other-css" label="TPL_ATOMIC2_OTHERCSS_FIELDSET_LABEL">
				<field name="meyers-reset" type="radio" default="0" label="Meyer's Reset" description="Load Eric Meyer's CSS Reset Reloaded. If you have Blueprint enabled, this will automatically be disabled.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
    			 <field name="css-print" type="radio" default="0" label="Print CSS File" description="Load the default CSS file (karpenter-print.css) with print-specific styles.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="css-screen" type="radio" default="0" label="Screen CSS File" description="Load the default CSS file (karpenter-screen.css) with screen-specific styles.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="css-mobile" type="radio" default="0" label="Mobile CSS File" description="Load the default CSS file (karpenter-mobile.css) with mobile-specific styles.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="css-ie" type="radio" default="0" label="IE CSS File" description="Load the default CSS file (karpenter-ie.css) with IE-specific styles.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="css3-buttons" type="radio" default="0" label="CSS3 Buttons" description="Load beautiful CSS3-based buttons.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="css-pie" type="radio" default="0" label="CSS PIE" description="Progressive Internet Explorer (PIE) gives IE versions 6-8 the ability to render many CSS3 elements.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>				
            </fieldset>
            <fieldset name="javascript" label="TPL_ATOMIC2_JAVASCRIPT_FIELDSET_LABEL">
                <field name="jslibrary" type="list" default="mootools"
					label="Preferred JavaScript Framework"
					description="Choose your preferred Javascript framework"
					filter="word">
                    <option value="mootools">MooTools</option>
                    <option value="jquery">jQuery</option>
					<option value="both">Both</option>
                </field>
                <field name="spacer3a"  type="spacer" default=""
					label=""
					description=""
					filter="string" />
				<field name="html5shiv" type="radio" default="0" label="HTML5shiv" description="A library for IE to recognise and style HTML5 elements. This will be disabled if you have Modernizr enabled.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
               <field name="modernizr" type="radio" default="0" label="Modernizr" description="The Modernizr library detects the availability of native implementations of specific browser features (mainly in HTML5 and CSS3). This allows you to account for browser differences better than normal User Agent sniffing.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
            </fieldset>
            <fieldset name="mootools" label="TPL_ATOMIC2_MOOTOOLS_FIELDSET_LABEL">
            	<field name="mootools-more" type="radio" default="0" label="MooTools More" description="MooTools More extends the core framework to include robust form manipulation, UI features, and more effects and utilities. It is required for most MooTools plug-ins.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="lazy" type="radio" default="0" label="Lazy Loading Plug-in" description="LazyLoad allows you to defer image loading until the user scrolls down to each image.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="slideshow" type="radio" default="0" label="Slideshow Plug-in" description="An amazing full-featured slideshow with navigation and19 cool transitions right out of the box.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="tabs" type="radio" default="0" label="Tabs Plug-in" description="MooTabs allows the creation of tabbed panes and provides transition effects when switching between the panes.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="moodialog" type="radio" default="0" label="MooDialog Plug-in" description="Replace those boring alert and confirm boxes with a nice MooDiaog version">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="milkbox" type="radio" default="0" label="Milkbox Plug-in" description="An expanded lightbox for images and Flash.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="powertools" type="radio" default="0" label="PowerTools Plug-in" description="PowerTools add extra features to MooTools including mobile gestures or a navigation tree. It requires MooTools Core and MooTools More.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="moodropmenu" type="radio" default="0" label="MooDropMenu Plug-in" description="Just create a simple menu list and let MooDropMenu transform it into an attractive dropdown menu.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
        		</field>
        		<field name="mootips" type="radio" default="0" label="MooTips Plug-in" description="Create fancy tooltips for just about anything.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
        		</field>
        	</fieldset>
        	<fieldset name="jquery" label="TPL_ATOMIC2_JQUERY_FIELDSET_LABEL">
				<field name="jqsimpledrop" type="radio" default="0" label="Simple Dropdown Plug-in" description="jQuery Simple Dropdown">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="lazyloader" type="radio" default="0" label="LazyLoader Plug-in" description="Your site images load only when they are visible. This 'lazy loading' of elements speeds up page loads and gives a nice effect.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="smartgallery" type="radio" default="0" label="Smart Gallery Plug-in" description="SmartGallery is an interactive image gallery that is specifically designed to support huge data. It is lightweight, lightening fast and fully customizable. SmartGallery comes with twelve transition effects including some unique transition effect and thumbnail navigation.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="jscarousel" type="radio" default="0" label="JSCarousel Plug-in" description="Quickly assemble a vertical or horizontal image slider to feature your images. ">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
        	</fieldset>
        	<fieldset name="media" label="TPL_ATOMIC2_MEDIA_FIELDSET_LABEL">
				<field name="html5player" type="radio" default="0" label="HTML5 Video Player" description="This HTML5 video player enables playing images on all browsers and platforms.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>				
				<field name="html5playerskin" type="list" default="original"
					label="Video Player Skin"
					description="Choose between three optional skins or stick with the original"
					filter="word">
                    <option value="original">Original</option>
                    <option value="hu">huCSS</option>
					<option value="tube">TubeCSS</option>
					<option value="vim">vimCSS</option>
                </field>
        	</fieldset>
        	<fieldset name="mobile" label="TPL_ATOMIC2_MOBILE_FIELDSET_LABEL">
				<field name="jslibrary" type="list" default=""
					label="Preferred Mobile Framework"
					description="Choose your preferred mobile framework."
					filter="word">
					<option value="">None</option>
                    <option value="mootouch">MooTouch</option>
                    <option value="jqtouch">jQTouch</option>
					<option value="jqmobile">jQuery Mobile</option>
                </field>
                <field name="mobileesp" type="radio" default="0" label="MobileESP" description="MobileESP is a simple, lightweight API for detecting mobile devices.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="iphonecheck" type="radio" default="0" label="iPhone Checkboxes" description="Create these simple sliders for your checkboxes.">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
        	</fieldset>
        	<fieldset name="userinterface" label="TPL_ATOMIC2_USERINTERFACE_FIELDSET_LABEL">
        		<field name="uilibrary" type="list" default=""
					label="Preferred UI Framework"
					description="Choose your preferred UI framework"
					filter="word">
					<option value="">None</option>
                    <option value="mochaui">MochaUI</option>
                    <option value="jqueryui">jQueryUI</option>
                </field>
        	</fieldset>
        	<fieldset name="typography" label="TPL_ATOMIC2_WEBFONTS_FIELDSET_LABEL">
